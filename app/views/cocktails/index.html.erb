<div class="container">
  <div class="row justify-content-center">
    <h1>Our Cocktails</h1>
  </div>

  <div class="row">

    <% @cocktails.each do |cocktail| %>
    <div class="col-4 ">
      <div class="card">
        <div class="card-trip">
          <%= cl_image_tag cocktail.picture.key, crop: :fill %>

          <div class="card-trip-infos">
            <h3><%= cocktail.name %></h3>
            <p><%= link_to 'Show recipe', cocktail_path(cocktail) %></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>

  </div>
</div>
