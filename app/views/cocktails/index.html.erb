<div class="container">
  <div class="row justify-content-center">
    <h1>Our Cocktails</h1>
  </div>

  <div class="row">

    <% @cocktails.each do |cocktail| %>
    <div class="col-4 ">
      <div class="card-trip" style="background-image: url('<%= cl_image_path cocktail.picture.key, crop: :fill %>')">
        <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
      </div>
    </div>
    <% end %>

  </div>
</div>
